<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wildcatbank.MainActivity">



    <fragment android:name="com.wildcatbank.AccountTabs"
        android:id="@+id/accounttabs"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        tools:layout="@layout/fragment_account_tabs" />

    <fragment android:name="com.wildcatbank.ButtonSignIn"
        android:id="@+id/buttonsignin"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="end"
        tools:layout="@layout/fragment_button_sign_in"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/wildcat_bank"
        android:id="@+id/textView"
        android:layout_below="@+id/accounttabs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textColor="#5f96e3"
        android:textIsSelectable="false"
        android:textSize="42sp" />
</RelativeLayout>
